    }
}

void print_report(Student *s) {
    printf("\nğŸ‘¤ å­¸ç”Ÿï¼š%s\n", s->name);
    printf("ç¸½æˆç¸¾ï¼š%.2fï¼ˆç­‰ç´šï¼š%cï¼‰\n", s->total, s->grade);
    printf("å­¸ç¿’æ™‚é–“ï¼š%.2f å°æ™‚\n", s->study_hours);
    printf("æ•ˆç‡åˆ†æ•¸ï¼š%.2f\n", s->efficiency);
